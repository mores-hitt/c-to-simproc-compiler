{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug scc (no flags)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux-debug/scc/scc",
            "args": [
                "${input:testFile}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "build-scc"
        },
        {
            "name": "Debug scc (with flag)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux-debug/scc/scc",
            "args": [
                "${input:compilerStage}",
                "${input:testFile}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "build-scc"
        },{
            "name": "Debug sp-cli",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux-debug/sp-cli/sp-cli",
            "args": [
            "${input:testFile}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "build-sp-cli"
        },
    ],
    "inputs": [
        {
            "id": "compilerStage",
            "type": "pickString",
            "description": "Select compiler stage:",
            "options": [
                "--lex",
                "--parse",
                "--codegen",
                "--nodriver"
            ],
            "default": "--lex"
        },
        {
            "id": "testFile",
            "type": "promptString",
            "description": "Enter path to test file:",
            "default": "examples/valid/test_input.c"
        }
    ]
}